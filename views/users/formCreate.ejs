<div class="form-row">
    <div class="form-item">
        <label>Name</label>
        <input type="text" name="name" value="<%= user.name %>">
    </div>
    <div class="form-item">        
        <label>Email</label>
        <input type="text" name="email" value="<%= user.email %>">
    </div>
    <div class="form-item">
        <label>Password</label>
        <input type="password" name="pwd" value="<%= user.pwd %>">
    </div>
</div>