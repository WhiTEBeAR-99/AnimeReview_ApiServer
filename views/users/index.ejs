<h2 class="page-header">Search Users</h2>
<form action="/users" method="GET">
    <label>Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>
<br>
<% users.forEach(user => { %>
<div>
    <%= user.name %>
    <br>
    <%= user.email %>
    <br>
    <%= user.password %>
</div> <!-- Show thông tin của người dùng -->
<div class="btn-row">
    <a class="btn btn-primary" href="/users/<%= user.id %>">View</a>
    <a class="btn btn-action" href="/users/<%= user.id %>/edit">Edit</a>
    <!-- <a href="/users/< %= user.id %>">Delete</a> //ko dùng như thế này vì server sẽ hiểu nhầm giao thức này thành GET và lần lượt đi vào trong database xoá từng dữ liệu -->
    <%- include('../partials/deleteForm', 
                { url: `/users/${user.id}` }) %>
</div>
<% }) %>