<h2 class="page-header">Search Mangas</h2>
<form action="/mangas" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Title</label>
            <input type="text" name="title" value="<%= searchOptions.title %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<div class="form-row">
    <% mangas.forEach(manga => { %>
        <div class="form-item">
            <a href="/mangas/<%= manga.id %> ">
                <img height="150" width="100" src="<%= manga.coverImagePath %> ">
                <%= manga.title %>
            </a>
        </div>
    <% }) %>
</div>