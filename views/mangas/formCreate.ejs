<div class="form-row">
    <div class="form-item">
        <label>Title</label>
        <input type="text" name="title" value="<%= manga.title %>">
    </div>
    <div class="form-item">
        <label>Author</label>
        <input type="text" name="author" value="<%= manga.author %>">
    </div>    
    <div class="form-item">
        <label>Chapter</label>
        <input type="number" name="chapter" min="1" value="<%= manga.chapter %>">
    </div> 
</div>
<div class="form-row">
    <div class="form-item form-item-no-grom">
        <label>Cover Image</label>
        <input type="file" name="cover" class="filepond">
    </div>
    <div class="form-item form-item-no-grom">
        <label>Description</label>
        <textarea name="description"><%= manga.description %></textarea>
    </div>    
</div>
